<h3>Your Quotes</h3>

# Iterate through Quotes and display all quotes that belong to the session user (this is established in the def index in the quotes_controller)
<hr />
<% @quotes.each do |quote| %>
    <div class="card bg-body-tertiary" style="margin-bottom:10px">
    <div class="card-body">
        <h3 class="card-title"><%= quote.quote_text %></h3>
        # Display Philosopher first and last name and create href link to their page
        <p class="card-text"><%= "#{quote.philosopher.fname} #{quote.philosopher.lname}" %><br />[<a href="/quotes/<%=quote.id %>"><%= "Read More" %></a>]</p>
    </div>
    </div>
<% end %>